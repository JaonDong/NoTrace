@model TestIdentity.Models.UserLoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div style="color: red;">
    @Html.ValidationSummary()
</div>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label>User Naem:</label>
        @Html.TextBoxFor(u => u.UserName, new {@class = "form-control", placeholder = "UserName"})
    </div>
    <div class="form-group">
        <label >Password:</label>
        @Html.TextBoxFor(u => u.Password, new {@class = "form-control", placeholder = "Password", type = "password"})
    </div>
    <button type="submit" class="btn btn-default">Login</button>
}